class Solution {
public:
    bool isPowerOfFour(int num) 
    {
        if(num <= 0)
            return false;
        else if(num == 1)
            return true;
        else
        {
            if((num & num - 1) == 0)
                return isPowerOfFour(num>>2);
            else
                return false;
        }
    }
};
